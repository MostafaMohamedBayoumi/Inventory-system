@model List<Product> 

<!DOCTYPE html>
<html>

<head>
    <title>Home Photo Inventory</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        #background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        #background-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-container {
            overflow-x: auto; /* Enable horizontal scrolling */
            white-space: nowrap; /* Prevent line breaks in the scrollable area */
            padding: 20px; /* Add some padding for spacing */
        }

        .product {
            display: inline-block; /* Display products in a row */
            width: 200px; /* Set a fixed width for each product */
            margin-right: 20px; /* Add margin to create space between products */
            vertical-align: top; /* Align products to the top of the row */
        }

        .product-image {
            max-width: 100%;
            max-height: 200px;
            object-fit: contain;
        }

        .product-details {
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div id="background-container">
        <img id="background-image" src="https://www.optiproerp.com/wp-content/uploads/erp-inventory_management.jpg" alt="Home Inventory Management">
    </div>

    <div class="product-container">
        @foreach (var item in Model)
        {
            <div class="product">
                <img src="@item.ImageUrl" class="product-image" />
                <div class="product-details">
                    <h4>@item.ProductName</h4>
                    <a class="btn btn-outline-dark" asp-controller="Product" asp-action="GetProduct" asp-route-id="@item.Id"><b>Details</b></a>
                </div>
            </div>
        }
    </div>
</body>

</html>
