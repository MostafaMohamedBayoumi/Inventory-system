@model InventorySystem.Models.Product

@{
    ViewData["Title"] = "DeleteProduct";
}

<h1>DeleteProduct</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
    </dl>
    <div class="col-x">
        <img src="@Model.ImageUrl" id="empImage" style="object-fit: contain; max-width: 100%;" />
    </div>
    
    <form asp-action="DeleteProduct">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-outline-danger mt-1" type="submit" value="Delete" class="btn btn-danger"/>
        <a class="btn btn-outline-primary mt-1" asp-action="DisplayProduct"><b>Back to List</b></a>
    </form>
</div>
